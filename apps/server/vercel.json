{
  "version": 2,
  "functions": {
    "api/index.ts": {
      "runtime": "edge"
    }
  },
  "routes": [
    { "src": "/trpc/(.*)", "dest": "api/index.ts" },
    { "src": "/(.*)", "dest": "api/index.ts" }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api"
    }
  ],
  "redirects": [{ "source": "/", "destination": "/api", "permanent": false }]
}
