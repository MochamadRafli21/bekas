{
  "name": "bekas",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "scripts": {
    "dev:web": "bun --cwd apps/web dev",
    "dev:server": "bun run app/server/index.ts",
    "dev": "bun run dev:server & bun run dev:web"
    "seed": "bun run ./apps/server/prisma/seed.ts"
    "migrate": "bunx prisma migrate dev --schema=/app/server/prisma/schema.prisma --name init",
    "generate": "bunx prisma generate --schema=/app/server/prisma/schema.prisma",
  }
}
